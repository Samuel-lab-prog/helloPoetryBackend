{
	"compilerOptions": {
		// Environment setup & latest features
		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "Preserve",
		"moduleDetection": "force",
		"jsx": "react-jsx",
		"allowJs": true,
		"baseUrl": "./src",
		"paths": {
			"@Domains/*": ["./domains/*"],
			"@prisma/*": ["./generic-subdomains/persistance/prisma/*"],
			"@DomainError": ["./generic-subdomains/utils/DomainError.ts"],
			"@AppError": ["./generic-subdomains/utils/AppError.ts"],
			"@DatabaseError": ["./generic-subdomains/utils/DatabaseError.ts"],
			"@SetupPlugin": ["./generic-subdomains/utils/plugins/setupPlugin.ts"],
			"@GenericSubdomains/*": ["./generic-subdomains/*"],

			"@PrismaErrorHandler": [
				"./generic-subdomains/persistance/prisma/PrismaErrorHandler.ts"
			],
			"@PrismaClient": [
				"./generic-subdomains/persistance/prisma/PrismaClient.ts"
			]
		},

		// Bundler mode
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,

		// Best practices
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,

		// Some stricter flags (disabled by default)
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noPropertyAccessFromIndexSignature": false
	}
}
